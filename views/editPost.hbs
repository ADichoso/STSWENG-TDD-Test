<div id="post-form" class="row container">
  <form class="col s12 card" action="/posts/{{method}}" method="POST">
    <div class="card-content">
      <div class="row">
        <div class="col s12">
          <p class="card-title center-align">{{method}} Post</p>
        </div>
      </div>
      <input type="text" id="id" name="id" readonly value="{{post._id}}">
      {{> messages}}
      <div class="row">
        <div class="col s12 input-field">
          <input type="text" id="title" name="title" {{#ifEquals method 'Delete'}}readonly{{/ifEquals}} value={{post.title}}>
          <label for="title">Title</label>
        </div>
      </div>

      <div class="row">
        <div class="col s12 input-field">
          <label for="content">Post Content</label>
          <textarea id="content" name="content" class="materialize-textarea" {{#ifEquals method 'Delete'}}readonly{{/ifEquals}}>{{post.content}}</textarea>
        </div>
      </div>

      <div class="row center-align">
        <div class="col s12">
          <button class="waves-effect waves-light btn">{{method}} Post</button>
        </div>
      </div>
    </div>
  </form>
</div>
